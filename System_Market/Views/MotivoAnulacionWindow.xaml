<!--
    MotivoAnulacionWindow.xaml
    Ventana modal para ingresar el motivo de anulación de una operación.
    El motivo se registra y queda visible en el historial.
    Incluye validación de longitud y contador de caracteres.
-->

<Window x:Class="System_Market.Views.MotivoAnulacionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Motivo de Anulación"
        Height="320" Width="560"
        MinHeight="260" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MainBgLocal}"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <!--
            Fondo principal en degradado, coherente con el resto del sistema.
        -->
        <LinearGradientBrush x:Key="MainBgLocal" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#07202A" Offset="0"/>
            <GradientStop Color="#0F3F68" Offset="1"/>
        </LinearGradientBrush>

        <!--
            Paleta local: colores para tarjetas, acentos y textos.
        -->
        <SolidColorBrush x:Key="CardBgLight" Color="#17202A"/>
        <SolidColorBrush x:Key="CardBg" Color="#11151A"/>
        <SolidColorBrush x:Key="AccentTeal" Color="#19C1D3"/>
        <SolidColorBrush x:Key="AccentTealDark" Color="#0F94A0"/>
        <SolidColorBrush x:Key="HeaderText" Color="#E8F6F9"/>
        <SolidColorBrush x:Key="MutedText" Color="#BFD7DB"/>

        <!--
            Estilos de botones principales y neutros, basados en MaterialDesign.
        -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="{StaticResource AccentTeal}"/>
            <Setter Property="Foreground" Value="{StaticResource HeaderText}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentTealDark}"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2"/>
        </Style>

        <Style x:Key="NeutralButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="#394B52"/>
            <Setter Property="Foreground" Value="{StaticResource HeaderText}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
        </Style>

        <!--
            Estilos para títulos y descripciones del modal.
        -->
        <Style x:Key="ModalTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource HeaderText}"/>
        </Style>
        <Style x:Key="ModalDescription" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource MutedText}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Border Background="{StaticResource CardBgLight}"
                CornerRadius="10"
                Padding="18"
                materialDesign:ShadowAssist.ShadowDepth="Depth3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Info -->
                    <RowDefinition Height="*"/>
                    <!-- Textbox + contador -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!--
                    Header: icono y título del modal.
                -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8" VerticalAlignment="Center">
                    <Border Width="36" Height="36" CornerRadius="18" Background="{StaticResource CardBg}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,0,8,0">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE783;" Foreground="{StaticResource AccentTeal}" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Ingrese el motivo de anulación" Style="{StaticResource ModalTitle}"/>
                        <TextBlock Text="La razón quedará registrada y será visible en el historial." Style="{StaticResource ModalDescription}" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!--
                    Info adicional (actualmente oculto, se puede usar para mensajes).
                -->
                <TextBlock Grid.Row="1"
                           Text=""
                           Visibility="Collapsed"
                           Margin="0,0,0,6"/>

                <!--
                    Área de ingreso del motivo:
                    - TextBox multilinea con hint y contador de caracteres.
                -->
                <Grid Grid.Row="2" Margin="0,6,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBox x:Name="txtMotivo"
                             Grid.Row="0"
                             materialDesign:HintAssist.Hint="Escribe el motivo..."
                             Padding="10"
                             FontSize="13"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             MaxLength="300"
                             MinHeight="140"
                             Background="{StaticResource CardBg}"
                             Foreground="{StaticResource HeaderText}"
                             BorderBrush="#23333A"
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"/>

                    <!--
                        Contador de caracteres alineado a la derecha.
                    -->
                    <DockPanel Grid.Row="1" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="{Binding Text.Length, ElementName=txtMotivo}" Foreground="{StaticResource MutedText}" Opacity="0.85"/>
                            <TextBlock Text="/300" Foreground="{StaticResource MutedText}" Opacity="0.85" Margin="4,0,0,0"/>
                        </StackPanel>
                    </DockPanel>
                </Grid>

                <!--
                    Footer: botones de acción (Cancelar y Confirmar).
                -->
                <DockPanel Grid.Row="3" Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <Button Content="Cancelar"
                                Padding="12,8"
                                Margin="0,0,8,0"
                                IsCancel="True"
                                Style="{StaticResource NeutralButton}"/>

                        <Button x:Name="btnConfirmar"
                                Padding="12,8"
                                IsDefault="True"
                                Click="BtnConfirmar_Click"
                                Style="{StaticResource PrimaryButton}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8FB;" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Confirmar" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>
    </Grid>
</Window>