<!--
    LoginWindow.xaml
    Ventana de inicio de sesión con diseño moderno y minimalista.
    Incluye validación de usuario, contraseña, acceso a registro y cierre.
-->

<Window x:Class="System_Market.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Iniciar Sesión"
        Height="405" Width="366"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        KeyDown="Window_KeyDown">

    <!--
        Border principal: da forma redondeada y sombra a la ventana.
        El fondo es un degradado vertical suave.
    -->
    <Border CornerRadius="22" SnapsToDevicePixels="True" Padding="18" Margin="8" MouseDown="Border_MouseDown">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FF9B82C9" Offset="0"/>
                <GradientStop Color="#FFC9BFE8" Offset="0.6"/>
                <GradientStop Color="#FFEFEFF4" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="#66000000" BlurRadius="22" ShadowDepth="6"/>
        </Border.Effect>

        <Grid>
            <!--
                StackPanel central: contiene todos los controles de interacción.
            -->
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" >

                <!--
                    Avatar: círculo con icono de usuario.
                -->
                <StackPanel HorizontalAlignment="Center" Margin="0,6,0,6">
                    <Border Width="86" Height="86" CornerRadius="43"
                            Background="#30FFFFFF"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Padding="8">
                        <Border.Effect>
                            <DropShadowEffect Color="#55000000" BlurRadius="8" ShadowDepth="2"/>
                        </Border.Effect>
                        <Grid>
                            <Ellipse Fill="#22FFFFFF"/>
                            <Viewbox Stretch="Uniform">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Opacity="0.95" Data="M12,12A5,5 0 1,0 12,2A5,5 0 0,0 12,12 M12,14.9C7.5,14.9 2,16.9 2,21.4V24H22V21.4C22,16.9 16.5,14.9 12,14.9Z"/>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                    </Border>
                </StackPanel>

                <!--
                    Título de la ventana.
                -->
                <TextBlock Text="User Login" FontSize="22" FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,8,0,18" Opacity="0.98">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#66000000" BlurRadius="6" ShadowDepth="1"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!--
                    Campo de usuario: icono y TextBox con hint.
                -->
                <Grid Margin="4,6,4,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="36"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="" FontSize="18" Foreground="#B3D9F0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Column="1">
                        <TextBox x:Name="txtUsuario" VerticalContentAlignment="Center" FontSize="14"
                                 Background="Transparent" Foreground="#403C3B" BorderThickness="0"
                                 materialDesign:HintAssist.Hint="Usuario" CaretBrush="DarkViolet"/>
                        <Rectangle Height="1" Fill="#2FFFFFFF" Margin="0,6,0,0"/>
                    </StackPanel>
                </Grid>

                <!--
                    Campo de contraseña: icono y PasswordBox con hint.
                -->
                <Grid Margin="4,12,4,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="36"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" FontFamily="Segoe MDL2 Assets" Text="" FontSize="18" Foreground="#B3D9F0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Column="1">
                        <PasswordBox x:Name="txtPassword" VerticalContentAlignment="Center" FontSize="14"
                                     Background="Transparent" Foreground="#403C3B" BorderThickness="0"
                                     materialDesign:HintAssist.Hint="Contraseña" CaretBrush="DarkViolet"/>
                        <Rectangle Height="1" Fill="#2FFFFFFF" Margin="0,6,0,0"/>
                    </StackPanel>
                </Grid>

                <!--
                    Botón LOGIN: gradiente, esquinas redondeadas, acción principal.
                -->
                <Button x:Name="btnIngresar"
                        Content="LOGIN"
                        Height="44"
                        Margin="0,20,0,6"
                        FontWeight="Bold"
                        Foreground="White"
                        Click="BtnIngresar_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#FF2E7BBF" Offset="0"/>
                            <GradientStop Color="#FF45C1F0" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="#00FFFFFF"/>
                    </Button.BorderBrush>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="{TemplateBinding Background}" Padding="6">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!--
                    Botón para registro: estilo enlace, acción secundaria.
                -->
                <Button x:Name="btnRegister"
                        Content="Crear cuenta"
                        Click="btnRegister_Click"
                        Background="Transparent"
                        Foreground="Blue"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Center"
                        Margin="0,6,0,0"/>
            </StackPanel>

            <!--
                Botón de cierre: esquina superior derecha, superpuesto.
            -->
            <Button x:Name="btnClose" Width="34" Height="34"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"
                    Padding="0" Background="#1FFFFFFF" BorderBrush="Transparent"
                    Foreground="White" Click="BtnClose_Click" ToolTip="Cerrar" Cursor="Hand">
                <TextBlock Text="✕" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Border>
</Window>