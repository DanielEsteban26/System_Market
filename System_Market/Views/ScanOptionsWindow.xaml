<Window x:Class="System_Market.Views.ScanOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acción para código de barras"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="White"
        MinWidth="520"
        MinHeight="170">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Código leído -->
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Código leído: "
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="txtCodigo"
                       FontSize="16"
                       Foreground="#0A5CCF"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button x:Name="btnAgregarProducto"
                    Click="AgregarProducto_Click"
                    Content="Agregar Producto"
                    Padding="14,6"
                    MinWidth="120"
                    Margin="0,0,30,0"/>
            <Button x:Name="btnNuevaCompra"
                    Click="NuevaCompra_Click"
                    Content="Nueva Compra"
                    Padding="14,6"
                    MinWidth="120"
                    Visibility="Collapsed"
                    Margin="0,0,30,0"/>
            <Button x:Name="btnNuevaVenta"
                    Click="NuevaVenta_Click"
                    Content="Nueva Venta"
                    Padding="14,6"
                    MinWidth="120"
                    Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>