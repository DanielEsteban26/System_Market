<Window x:Class="System_Market.Views.ScanOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acción para código de barras"
        Height="180" Width="460"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Código leído:" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock x:Name="txtCodigo" Margin="8,0,0,0" VerticalAlignment="Center" Foreground="#1565C0" FontWeight="Bold"/>
        </StackPanel>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Agregar Producto" Margin="6" Padding="12,6" Click="AgregarProducto_Click"/>
            <Button Content="Nueva Compra" Margin="6" Padding="12,6" Click="NuevaCompra_Click"/>
            <Button Content="Nueva Venta" Margin="6" Padding="12,6" Click="NuevaVenta_Click"/>
        </WrapPanel>
    </Grid>
</Window>