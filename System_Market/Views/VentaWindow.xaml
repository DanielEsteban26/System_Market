<Window x:Class="System_Market.Views.VentaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Registrar Venta" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <Window.Resources>
        <!-- Paleta local -->
        <SolidColorBrush x:Key="BrushBtnPrimary" Color="#3F51B5"/>
        <SolidColorBrush x:Key="BrushBtnAccent"  Color="#0288D1"/>
        <SolidColorBrush x:Key="BrushBtnDanger"  Color="#EF5350"/>

        <!-- Estilos para columnas numéricas -->
        <Style x:Key="RightAlignedCell" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <!-- Estilo para el botón F2: Editar (outlined) -->
        <Style x:Key="ButtonEditOutlined" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <DockPanel Grid.Row="0" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE719;" FontSize="20"
                           Foreground="{DynamicResource PrimaryHueMidBrush}" Margin="0,0,6,0"/>
                <TextBlock Text="Registrar venta" FontSize="20" FontWeight="Bold"
                           Foreground="{DynamicResource MaterialDesignBody}"/>
            </StackPanel>
        </DockPanel>

        <!-- Búsqueda / escaneo -->
        <materialDesign:Card Grid.Row="1"
                             Padding="12" Margin="0,0,0,12"
                             Background="{DynamicResource MaterialDesignCardBackground}"
                             materialDesign:ShadowAssist.ShadowDepth="Depth1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Antes era 260: ahora Auto para no recortar el botón -->
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Código de barras" VerticalAlignment="Center"
                           Margin="0,0,8,0" Foreground="{DynamicResource MaterialDesignBody}"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <TextBox x:Name="txtCodigoBarra"
                             Width="220"
                             PreviewTextInput="TxtCodigoBarra_PreviewTextInput"
                             PreviewKeyDown="TxtCodigoBarra_PreviewKeyDown"
                             Height="36"
                             Padding="10,0"
                             VerticalContentAlignment="Center"
                             Margin="0,0,8,0"
                             KeyDown="txtCodigoBarra_KeyDown"
                             materialDesign:HintAssist.Hint="Ingrese o escanee el código"/>

                    <!-- Botón F2: Editar con estilo outlined -->
                    <Button x:Name="btnEditarCodigo"
                            Click="BtnDesbloquearCodigo_Click"
                            Style="{StaticResource ButtonEditOutlined}"
                            ToolTip="Permite escribir un código interno manualmente (o presiona F2)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;" Margin="0,0,6,0"/>
                            <TextBlock Text="F2: Editar"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Button x:Name="btnAgregarProducto"
                        Grid.Column="2"
                        Padding="14,6"
                        Background="{StaticResource BrushBtnPrimary}"
                        Foreground="White"
                        Click="btnAgregarProducto_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,6,0"/>
                        <TextBlock Text="Agregar producto"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnHistorial"
                        Grid.Column="3"
                        Padding="14,6"
                        Margin="8,0,0,0"
                        Background="{StaticResource BrushBtnAccent}"
                        Foreground="White"
                        Click="BtnHistorial_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE81C;" Margin="0,0,6,0"/>
                        <TextBlock Text="Historial de ventas"/>
                    </StackPanel>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Detalle de venta -->
        <materialDesign:Card Grid.Row="2"
                             Padding="12" Margin="0,0,0,12"
                             Background="{DynamicResource MaterialDesignCardBackground}"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <DataGrid x:Name="dgDetalleVenta"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      KeyDown="dgDetalleVenta_KeyDown"
                      Background="Transparent"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      AlternationCount="2"
                      AlternatingRowBackground="#0FFFFFFF"
                      materialDesign:DataGridAssist.CellPadding="10,6,10,6"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="10,8,10,8">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Producto" Binding="{Binding ProductoNombre}" Width="2*"/>
                    <DataGridTextColumn Header="Cantidad"
                                        Binding="{Binding Cantidad}" Width="120"
                                        ElementStyle="{StaticResource RightAlignedCell}"/>
                    <DataGridTextColumn Header="Precio Unit."
                                        Binding="{Binding PrecioUnitario, StringFormat={}{0:N2}}" Width="150"
                                        ElementStyle="{StaticResource RightAlignedCell}"/>
                    <DataGridTextColumn Header="Subtotal"
                                        Binding="{Binding Subtotal, StringFormat={}{0:N2}}" Width="150"
                                        ElementStyle="{StaticResource RightAlignedCell}"/>

                    <!-- Acciones: Disminuir / Aumentar -->
                    <DataGridTemplateColumn Header="Acciones" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Padding="10,4"
                                            Margin="0,0,6,0"
                                            Background="{StaticResource BrushBtnDanger}"
                                            Foreground="White"
                                            Click="btnDisminuirCantidad_Click"
                                            CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>
                                        </Button.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE738;" Margin="0,0,6,0"/>
                                            <TextBlock Text="Disminuir"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Padding="10,4"
                                            Background="{StaticResource BrushBtnPrimary}"
                                            Foreground="White"
                                            Click="btnAumentarCantidad_Click"
                                            CommandParameter="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>
                                        </Button.Style>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,6,0"/>
                                            <TextBlock Text="Aumentar"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- Pie: total y registrar -->
        <DockPanel Grid.Row="3">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                    <TextBlock Text="Total:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,6,0"/>
                    <TextBlock x:Name="txtTotal"
                               VerticalAlignment="Center"
                               FontSize="20" FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesignBody}"/>
                </StackPanel>

                <Button Padding="14,6"
                        Background="{StaticResource BrushBtnPrimary}"
                        Foreground="White"
                        Click="btnRegistrarVenta_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE73E;" Margin="0,0,6,0"/>
                        <TextBlock Text="Registrar venta"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>

        <!-- Snackbar -->
        <materialDesign:Snackbar x:Name="snackbar"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Bottom"
                                 Margin="16"/>
    </Grid>
</Window>