<Window x:Class="System_Market.Views.MetaMesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="Definir Meta Mensual"
        Width="360" Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="Segoe UI"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

	<Window.Resources>
		<sys:Double x:Key="CtlHeight">36</sys:Double>
		<sys:Double x:Key="CtlFontSize">13</sys:Double>
		<Thickness x:Key="CtlPadding">14,6</Thickness>

		<!-- Colores de botones -->
		<SolidColorBrush x:Key="BrushBtnPrimary" Color="#3F51B5"/>
		<SolidColorBrush x:Key="BrushBtnNeutral" Color="#607D8B"/>
	</Window.Resources>

	<Grid Margin="16">
		<materialDesign:Card Padding="14"
                             Background="{DynamicResource MaterialDesignCardBackground}"
                             materialDesign:ShadowAssist.ShadowDepth="Depth2">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- TÃ­tulo -->
				<TextBlock Grid.Row="0"
                           Text="Ingrese la meta de ventas para el mes actual"
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesignBody}"/>

				<!-- Campo Meta con prefijo S/ -->
				<StackPanel Grid.Row="1">
					<TextBlock Text="Meta (S/)" FontSize="12"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="2,0,0,4"/>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<!-- Prefijo -->
						<Border Grid.Column="0"
                                Background="#11000000"
                                BorderBrush="#22000000"
                                BorderThickness="1"
                                CornerRadius="4,0,0,4"
                                Padding="10,0">
							<TextBlock Text="S/" VerticalAlignment="Center"/>
						</Border>

						<!-- Input -->
						<Border Grid.Column="1"
                                Background="#11000000"
                                BorderBrush="#22000000"
                                BorderThickness="1"
                                CornerRadius="0,4,4,0">
							<TextBox x:Name="txtMeta"
                                     Height="{StaticResource CtlHeight}"
                                     FontSize="{StaticResource CtlFontSize}"
                                     Padding="10,0"
                                     VerticalContentAlignment="Center"
                                     TextAlignment="Right"
                                     PreviewTextInput="NumeroDecimal_PreviewTextInput"
                                     TextChanged="TxtMeta_TextChanged"/>
						</Border>
					</Grid>
				</StackPanel>

				<!-- Botones -->
				<StackPanel Grid.Row="2" Orientation="Horizontal"
                            HorizontalAlignment="Right" Margin="0,14,0,0">
					<Button Content="Cancelar"
                            Padding="{StaticResource CtlPadding}"
                            MinHeight="{StaticResource CtlHeight}"
                            Margin="0,0,8,0"
                            Background="{StaticResource BrushBtnNeutral}"
                            Foreground="White"
                            IsCancel="True"
                            Click="BtnCancelar_Click">
						<Button.Style>
							<Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>
						</Button.Style>
					</Button>

					<Button x:Name="btnAceptar"
                            Content="Guardar"
                            Padding="{StaticResource CtlPadding}"
                            MinHeight="{StaticResource CtlHeight}"
                            Background="{StaticResource BrushBtnPrimary}"
                            Foreground="White"
                            IsDefault="True"
                            IsEnabled="False"
                            Click="BtnAceptar_Click">
						<Button.Style>
							<Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}"/>
						</Button.Style>
					</Button>
				</StackPanel>
			</Grid>
		</materialDesign:Card>
	</Grid>
</Window>