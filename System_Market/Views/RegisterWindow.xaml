<Window x:Class="System_Market.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Registrar Usuario"
        Height="380"
        Width="460"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="8"
                Padding="18"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,6">
                    <TextBlock Text="Registro de usuario" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="txtInfo" Text=" " FontSize="12" Foreground="{DynamicResource MaterialDesignBody}" Margin="0,6,0,0"/>
                </StackPanel>

                <TextBox Grid.Row="1" x:Name="txtNombre" Height="36" Margin="0,6,0,0"
                         materialDesign:HintAssist.Hint="Nombre completo"
                         VerticalContentAlignment="Center" />

                <TextBox Grid.Row="2" x:Name="txtUsuario" Height="36" Margin="0,8,0,0"
                         materialDesign:HintAssist.Hint="Nombre de usuario"
                         VerticalContentAlignment="Center" />

                <PasswordBox Grid.Row="3" x:Name="txtClave" Height="36" Margin="0,8,0,0"
                             materialDesign:HintAssist.Hint="Clave (mín. 6 caracteres)"
                             VerticalContentAlignment="Center" />

                <!-- Campo de clave administrador (solo visible si ya existe admin) -->
                <PasswordBox Grid.Row="4" x:Name="txtAdminClave" Height="36" Margin="0,8,0,0"
                             materialDesign:HintAssist.Hint="Clave de administrador (autorización)"
                             VerticalContentAlignment="Center" Visibility="Collapsed" />

                <!-- FIX: Eliminar la propiedad Spacing, que no existe en StackPanel -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                    <Button Content="Cancelar"
                            Width="110"
                            Height="36"
                            IsCancel="True"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="BtnCancelar_Click"/>
                    <Button Content="Registrar"
                            Width="140"
                            Height="36"
                            IsDefault="True"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="BtnRegistrar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>